import {Component, Injectable, OnDestroy, OnInit, ViewChild} from '@angular/core';
import {ComponentsStorageService} from '../shared/services/components-storage.service';
import {CdkDragDrop} from '@angular/cdk/drag-drop';
import {FlatTreeControl} from '@angular/cdk/tree';
import {ArrayDataSource} from '@angular/cdk/collections';
import {ExtendedModelClass, ModelInterface, SimpleModelClass} from '../object-models/model.classes';

const TREE_DATA = [
  {
    name: 'Fruit',
    expandable: true,
    level: 0,
  }, {
    name: 'Apple',
    expandable: false,
    level: 1,
  }, {
    name: 'Banana',
    expandable: false,
    level: 1,
  }, {
    name: 'Fruit loops',
    expandable: false,
    level: 1,
  }, {
    name: 'Vegetables',
    expandable: true,
    level: 0,
  }, {
    name: 'Green',
    expandable: true,
    level: 1,
  }, {
    name: 'Broccoli',
    expandable: false,
    level: 2,
  }, {
    name: 'Brussels sprouts',
    expandable: false,
    level: 2,
  }, {
    name: 'Orange',
    expandable: true,
    level: 1,
  }, {
    name: 'Pumpkins',
    expandable: false,
    level: 2,
  }, {
    name: 'Carrots',
    expandable: false,
    level: 2,
  }
];

interface ExampleFlatNode {
  expandable: boolean;
  name: string;
  level: number;
  isExpanded?: boolean;
}

const TREE_MAP_DATA = new Map([
  [0, {name: 'Fruit', level: 0, order: [1, 2, 3]}],
  [1, {name: 'Apple', level: 1, order: [1, 2, 3]}],
]);

@Component({
  selector: 'app-components-tree',
  templateUrl: './components-tree.component.html',
  styleUrls: ['./components-tree.component.scss']
})
export class ComponentsTreeComponent implements OnInit, OnDestroy {

  actualComponentList;
  treeControl = new FlatTreeControl(node => node.level, this.hasChildFunc);
  dataSource;

  constructor(public componentsSS: ComponentsStorageService) {
    this.componentsSS.componentsSteam$.subscribe(value => {
      console.log('Subscribe: ', value);
      this.actualComponentList = value;
      this.treeControl.collapseAll();
      this.dataSource = null;
      // this.dataSource = new ArrayDataSource([]);
      // this.dataSource =  new ArrayDataSource(Array.from(this.actualComponentList.values()));
      // this.dataSource =  new ArrayDataSource(Array.from(TREE_MAP_DATA.values()));
      this.dataSource =  new ArrayDataSource(TREE_DATA);
    });

    this.dataSource =  new ArrayDataSource(Array.from(this.actualComponentList.values()));
    console.log(new ArrayDataSource(Array.from(TREE_MAP_DATA.values())));
    console.log(new ArrayDataSource(TREE_DATA));
  }

  ngOnInit(): void {
  }

  ngOnDestroy(): void {
    this.componentsSS.componentsSteam$.unsubscribe();
  }

  hasChild = (_: number, node) => this.hasChildFunc(node);

  hasChildFunc(node): boolean {
    return node.order !== undefined;
  }

  getParentNode(node) {
    const nodeIndex = TREE_DATA.indexOf(node);

    for (let i = nodeIndex - 1; i >= 0; i--) {
      if (TREE_DATA[i].level === node.level - 1) {
        return TREE_DATA[i];
      }
    }

    return null;
  }

  shouldRender(node) {
    const parent: ExampleFlatNode = this.getParentNode(node);
    return !parent || parent.isExpanded;
  }
}
